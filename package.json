{
  "name": "sanity-hydrogen-ecommerce",
  "scripts": {
    "dev": "npm-run-all --parallel dev:*",
    "dev:web": "npm run dev --workspace=web",
    "dev:sanity": "npm run dev --workspace=sanity",
    "build": "npm-run-all build:*",
    "build:web": "npm run build --workspace=web",
    "build:sanity": "npm run build --workspace=sanity"
  },
  "workspaces": [
    "sanity",
    "web"
  ],
  "devDependencies": {
    "@sanity/blueprints": "0.0.1",
    "npm-run-all": "^4.1.5"
  },
  "dependencies": {
    "@types/node": "^24.2.0",
    "dotenv": "^16.6.1",
    "@sanity/client": "^7.8.2",
    "@sanity/functions": "1.0.3"
  }
}